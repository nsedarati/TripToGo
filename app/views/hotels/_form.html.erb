<div class="panel panel-default">
	<div class="panel-heading">
		Create new hotel
	</div>
	<div class="panel-body">
		<div class="container">
			<%= form_for @hotel do |f| %>
			<div class="row">
			<div class="form-control">
			<label>Hotel name: </label>
		<%= f.text_field :name, placeholder: "Hotel name" %>
				</div></br>
				</div>
				<div class="row">
						<div class="form-control">
			<label>Hotel Type: </label>
			<%= f.select :type, [["Luxury", "Luxury"], ["Hostel", "Hostel"], ["Bed & Breakfast", "Bed & Breakfast"], ["Dorm", "Dorm"]], id: "type" %>
				</div>
						</div></br>

				
						<div class="row">
						<div class="form-control">
							<label>Summary: </label>
							<%= f.text_area :summary, rows:2, placeholder: "Describe your hotel", class: "form-control" %>
							</div>
						</div></br></br></br></br>

							<div class="row">
						<div class="form-control">
							<label>Address: </label>
							<%= f.text_field :address, placeholder: "Your hotel address", class: "form-control" %>
							</div>
						</div></br></br></br></br>

						<div class="row">
							<div class="form-gorup">
								<label>Nightly Price</label>
								<%= f.text_field :price %>
							</div>
						</div></br>

						<div class="action">
							<%= f.submit "Save" %>
						</div>
			<% end %>
		</div>
	</div>
</div>